<PlusConfiguration version="2.7">

  <DataCollection StartupDelaySec="1.0">
    <DeviceSet
      Name="PlusServer: SteamVR (GenericTracker)"
      Description="Broadcasting tracking data through OpenIGTLink."
    />
    <Device
      Id="TD"
      Type="SteamVR"
      AcquisitionRate="30"
      ToolReferenceFrame="SteamVR"
      MissingInputGracePeriodSec="2">
      <DataSources>
        <DataSource
            Id="GenericTracker"
            Type="Tool"
            TrackingToolDeviceType="GenericTracker"
            BufferSize="150"
            PortName="GenericTracker"/>
      </DataSources>
      <OutputChannels>
        <OutputChannel
            Id="SteamVRTrackingStream">
            <DataSource Id="GenericTracker"/>
        </OutputChannel>
      </OutputChannels>
    </Device>
  </DataCollection>

  <PlusOpenIGTLinkServer
    MaxNumberOfIgtlMessagesToSend="1"
    MaxTimeSpentWithProcessingMs="50"
    ListeningPort="18944"
    SendValidTransformsOnly="TRUE"
    OutputChannelId="SteamVRTrackingStream" >
    <DefaultClientInfo>
      <MessageTypes>
        <Message Type="TRANSFORM" />
      </MessageTypes>
      <TransformNames>
        <Transform Name="GenericTrackerToSteamVR" />
      </TransformNames>
    </DefaultClientInfo>
  </PlusOpenIGTLinkServer>
  
</PlusConfiguration>
