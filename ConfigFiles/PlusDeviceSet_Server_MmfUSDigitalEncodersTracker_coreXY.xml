<PlusConfiguration version="2.3">

 <DataCollection StartupDelaySec="1.0" >
    <DeviceSet
      Name="Spatially tracked webcam frames"
      Description="Acquire spatially tracked webcam frames with multiple encoders" />
    <Device
      Id="WebCamDevice"
      Type="MmfVideo"
      FrameSize="640 480"
      VideoFormat="YUY2"
      CaptureDeviceId="0" >
      <DataSources>
        <DataSource Type="Video" Id="Video" PortUsImageOrientation="UN" ImageType="RGB_COLOR" />
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="VideoStream" VideoDataSourceId="Video" />
      </OutputChannels>
    </Device>

    <Device
      Id="TrackerDevice"
      Type="USDigitalEncodersTracker"
      ToolReferenceFrame="Reference" >
      <DataSources>
        <DataSource Type="Tool" Id="USImage" PortName="coreXY"
                    BufferSize="10"
                    MotionType="Linear" PulseSpacing="0.001" PulseSpacing2="0.001"
                    LocalAxis="1 0 0" LocalAxis2="0 0 1"
                    Mode ="4" Resolution = "3600" />

         <DataSource Type="Tool" Id="USImage" PortName="USImage"
                    From="USImage" To="Reference"
                    Persistent="FALSE"/>
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="TrackerStream" >
          <DataSource Id="USImage"/>
        </OutputChannel>
      </OutputChannels>
    </Device>

    <Device
      Id="TrackedVideoDevice"
      Type="VirtualMixer" >
      <InputChannels>
        <InputChannel Id="TrackerStream" />
        <InputChannel Id="VideoStream" />
      </InputChannels>
      <OutputChannels>
        <OutputChannel Id="TrackedVideoStream"/>
      </OutputChannels>
    </Device>

    <Device
      Id="CaptureDevice"
      Type="VirtualCapture"
      BaseFilename="RecordingTest.igs.mha"
      EnableCapturing="FALSE" >
      <InputChannels>
        <InputChannel Id="TrackedVideoStream" />
      </InputChannels>
    </Device>

  </DataCollection>
    <PlusOpenIGTLinkServer
    ListeningPort="18944"
    OutputChannelId="TrackedVideoStream" >
    <DefaultClientInfo>
      <MessageTypes>
        <Message Type="IMAGE" />
        <Message Type="TRANSFORM" />
      </MessageTypes>
      <ImageNames>
        <Image Name="USImage" EmbeddedTransformToFrame="Reference" />
      </ImageNames>
      <TransformNames>
        <Transform Name="ReferenceToUSImage" />
      </TransformNames>
    </DefaultClientInfo>
  </PlusOpenIGTLinkServer>
</PlusConfiguration>